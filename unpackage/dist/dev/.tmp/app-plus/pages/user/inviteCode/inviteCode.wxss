
page {
	background: -webkit-gradient(linear, left bottom, left top, from(rgba(255, 48, 0, 1)), to(rgba(250, 64, 89, 1)));
	background: -o-linear-gradient(bottom, rgba(255, 48, 0, 1), rgba(250, 64, 89, 1));
	background: linear-gradient(0deg, rgba(255, 48, 0, 1), rgba(250, 64, 89, 1));
}
.code-box {
	background-color: #FFFFFF;
	width: 620rpx;
	height: 734rpx;
	position: absolute;
	left: 50%;
	top: 10%;
	-webkit-transform: translateX(-50%);
	    -ms-transform: translateX(-50%);
	        transform: translateX(-50%);
	overflow: hidden;
	border-radius: 10rpx;
	text-align: center;
}
.share-btn {
	position: absolute;
	left: 50%;
	bottom: 10%;
	-webkit-transform: translateX(-50%);
	    -ms-transform: translateX(-50%);
	        transform: translateX(-50%);
	width: 620rpx;
}
.share-btn ._button {
	width: 280rpx;
	height: 88rpx;
	line-height: 88rpx;
	background: -o-linear-gradient(135deg, rgba(255, 180, 0, 1), rgba(255, 194, 48, 1));
	background: linear-gradient(-45deg, rgba(255, 180, 0, 1), rgba(255, 194, 48, 1));
	border-radius: 44rpx;
	font-size: 30rpx;
	font-family: PingFangSC-Medium;
	font-weight: 500;
	color: rgba(219, 33, 39, 1);
}
.divide-line {
	position: absolute;
	left: 50%;
	top: 50%;
	-webkit-transform: translate(-50%, -50%);
	    -ms-transform: translate(-50%, -50%);
	        transform: translate(-50%, -50%);
	width: 100%;
	height: 48rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.divide-line::after {
	content: '';
	position: absolute;
	right: -24rpx;
	top: 0;
	width: 48rpx;
	height: 48rpx;
	border-radius: 48rpx;
	background-color: #fc3a35;
}
.divide-line::before {
	content: '';
	position: absolute;
	left: -24rpx;
	top: 0;
	width: 48rpx;
	height: 48rpx;
	border-radius: 48rpx;
	background-color: #fc3a35;
}
.divide-line view {
	position: absolute;
	left: 0;
	top: 50%;
	width: 100%;
	height: 1rpx;
	border-top: dashed 2rpx #fc3a35;
}
.code-title {
	font-size: 30rpx;
	font-weight: 400;
	color: rgba(253, 96, 117, 1);
	margin: 40rpx 0 30rpx 0;
}
.code-num {
	font-size: 100rpx;
	font-weight: 400;
	color: rgba(249, 42, 120, 1);
}
.code-copy {
	width: 114rpx;
	height: 50rpx;
	line-height: 50rpx;
	line-height: 44rpx;
	background: -o-linear-gradient(135deg, rgba(255, 180, 0, 1), rgba(255, 194, 48, 1));
	background: linear-gradient(-45deg, rgba(255, 180, 0, 1), rgba(255, 194, 48, 1));
	border-radius: 8rpx;
	color: #FFFFFF;
	font-size: 28rpx;
	padding: 0;
	margin-top: 30rpx;
}
.code-img {
	width: 280rpx;
	height: auto;
	margin-top: 80rpx;
}

