.diyModal {
	width: 600rpx;
	height: 260rpx;
	position: fixed;
	left: 50%;
	top: 50%;
	-webkit-transform: translate(-50%, -50%);
	    -ms-transform: translate(-50%, -50%);
	        transform: translate(-50%, -50%);
	z-index: 200;
	background-color: #FFFFFF;
	border-radius: 10rpx;
	overflow: hidden;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
}
.diyModal-title {
	height: 160rpx;
	line-height: 160rpx;
}
.diyModal-btn {
	height: 100rpx;
	width: 100%;
	position: absolute;
	bottom: 0;
	border-top: solid 1rpx #E6E6E6;
}
.diyModal-btn ._button {
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	margin: 0;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	background-color: #FFFFFF;
	border-radius: 0;
	outline: none;
}
.diyModal-btn ._button:first-child {
	border-right: solid 1rpx rgba(230, 230, 230, 0.5);
}
.diyModal-btn ._button:last-child {
	border-left: solid 1rpx rgba(230, 230, 230, 0.5);
	color: #CC1414;
}

