
page {
	background-color: #f8f8f8;
}
.list {
	border-bottom: solid 1rpx #e6e6e6;
	background-color: #FFFFFF;
}
.list-item {
	height: 90rpx;
	line-height: 90rpx;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	text-align: center;
	font-size: 28rpx;
	font-weight: 400;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
}
.list-item image {
	width: 64rpx;
	height: 64rpx;
	border-radius: 50%;
}
.item-name {
	-webkit-box-flex: 2;
	-webkit-flex: 2;
	    -ms-flex: 2;
	        flex: 2;
}
.font-weg {
	color: rgba(34, 34, 34, 1);
}
.font-thin {
	color: rgba(102, 102, 102, 1);
}
.bottom-menu {
	height: 98rpx;
	width: 100%;
	background-color: #fff;
	border-top: solid 1rpx #f4f5f7;
}
.bottom-menu-con {
	height: 100%;
	font-size: 28rpx;
	font-weight: 400;
	color: rgba(34, 34, 34, 1);
}
.bottom-menu-con view {
	font-size: 42rpx;
	font-weight: 500;
	color: rgba(203, 14, 14, 1);
}

